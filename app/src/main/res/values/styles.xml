<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="myTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorAccent">#3974EC</item>
        <item name="colorPrimary">#4169E1</item>
        <item name="colorControlHighlight">#7692E1</item>
        <item name="colorControlNormal">#5586EB</item>

    </style>

    <style name="textview_default01"> <!-- 택스트 기본설정1 검정글 -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="textview_default01_1"> <!-- 택스트 기본설정1 검정글 -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#333333</item>
    </style>


    <style name="spinner_default01"> <!-- 택스트 기본설정1 검정글 -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="textview_title_default01"> <!-- 택스트 기본설정1 검정글 -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="large_text_default01"> <!-- 택스트 기본설정1 검정글 -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/defult_textcolor</item>
    </style>

    <style name="medium_text_default01"> <!-- 택스트 기본설정1 검정글 -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/defult_textcolor</item>
    </style>

    <style name="small_text_default01"> <!-- 택스트 기본설정1 검정글 -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/defult_textcolor</item>
    </style>

</resources>
