<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:customView="http://schemas.android.com/apk/res-auto"
	android:id="@+id/lay_main"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="80px"
	android:layout_marginBottom="8px"
	android:background="@drawable/shp_option">

	<ImageView
		android:id="@+id/img_opt_select"
		android:layout_width="47px"
		android:layout_height="47px"
		android:layout_centerVertical="true"
		android:layout_marginStart="19px"
		android:layout_marginEnd="17px"
		android:layout_marginRight="10px"
		android:background="@drawable/shape_option_unselect" />


	<TextView
		android:id="@+id/txt_dtlnam"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toStartOf="@id/txt_totamt_show"
		android:layout_toEndOf="@id/img_opt_select"
		android:gravity="center_vertical"
		android:minHeight="38px"
		android:text="아메리카노 HOT"
		android:textColor="#000000"
		android:textSize="31px" />

	<TextView
		android:id="@+id/txt_totamt_show"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginEnd="27px"
		android:text="-500 원"
		android:textColor="#000000"
		android:textSize="28px" />

	<TextView
		android:id="@+id/txt_dtlnum"
		android:layout_width="0px"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		android:textColor="#FFFFFF"
		android:visibility="gone"/>

	<TextView
		android:id="@+id/txt_totamt"
		android:layout_width="0px"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		android:textColor="#FFFFFF"
		android:visibility="gone"/>

</RelativeLayout>
