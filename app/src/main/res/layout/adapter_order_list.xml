<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40px"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:layout_marginBottom="27px">

        <TextView
            android:id="@+id/txt_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shp_c30px_sdc_w2_recr"
            android:gravity="center"
            android:minWidth="67px"
            android:minHeight="67px"
            android:padding="7px"
            android:text="1"
            android:textColor="#000000"
            android:textSize="30px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_prdnam"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginStart="27px"
            android:text="아메리카노"
            android:textColor="#000000"
            android:textSize="35px"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="@id/txt_num"
            app:layout_constraintStart_toEndOf="@id/txt_num"
            app:layout_constraintTop_toTopOf="@id/txt_num" />

        <TextView
            android:id="@+id/txt_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hot Small 휘핑크림 기본"
            android:textColor="#6E6E6E"
            android:textSize="24px"
            android:layout_marginTop="10px"
            app:layout_constraintStart_toStartOf="@+id/txt_prdnam"
            app:layout_constraintTop_toBottomOf="@id/txt_prdnam" />

        <TextView
            android:id="@+id/txt_prdsqy"
            style="@style/medium_text_default01"
            android:layout_marginEnd="20px"
            android:text="x10"
            android:textSize="35px"
            android:layout_marginStart="7px"
            android:textStyle="bold"
            android:textColor="#F54748"
            app:layout_constraintBottom_toBottomOf="@id/txt_num"
            app:layout_constraintStart_toEndOf="@id/txt_prdnam"
            app:layout_constraintTop_toTopOf="@id/txt_num"/>

        <TextView
            android:id="@+id/txt_prdamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35px"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="1,000 원"
            app:layout_constraintBottom_toBottomOf="@+id/txt_num"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_num" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#F2F2F2"/>


</LinearLayout>